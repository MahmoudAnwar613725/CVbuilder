<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.home.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvBasicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:text="Basic Info:"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Android Developer | available for full time W2 employment | willing to relocate"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:text="ِAbout me:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:text="Accomplished application developer with more than 8 years of overall IT industry experience, including 5 years of history developing and deploying many mobile apps using the complete Software Development Life Cycle. Researched and implemented
                enhancements to existing applications, systems, and tools which increased productivity and streamlined company workflow. Expertise includes languages and technologies such as Android, Java, Spring Boot, Hibernate, SQLite, Room, Realm, Google Maps, Firebase, RxJava, VS Code, IntelliJ, and more."/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>